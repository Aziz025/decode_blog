<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('partials/head.ejs')%>
    <title>addblog</title>
</head>
<body>
    <%-include('partials/header.ejs')%>
    
    <div class="addblog">
        <div class="addblog-content">   
            <form action="/api/addBlog" method="POST" class="form" enctype="multipart/form-data">
                <h3>Новый блог</h3>
                <fieldset class="fieldset">
                    <input type="title" placeholder="Введите заголовок блога" name="title">
                </fieldset>
                <fieldset class="fieldset">
                    <div class="select-wrapper">
                        <select name="category" id="categorySelect">
                            <option value="" disabled selected>Выберите категорию</option>
                            <% 
                                genres.forEach(genre => {
                            %>
                                    <option value="<%=genre._id%>"><%=genre.name%></option>
                            <%
                                }) 
                            %>  
                        </select>
                    </div>
                </fieldset>
                <fieldset class="fieldsete">
                    <label for="imageInput" onclick="chooseImage()">Выберите картинку</label>
                    <input type="file" id="imageInput" name="image" style="display: none;">
                </fieldset>
                <fieldset class="fieldset">
                    <input type="description" placeholder="Введите описание блога" name="description">
                </fieldset>
                <fieldset class="fieldset">
                <button type="submit">Создать</button>
                </fieldset>
            </form>
        </div>
    </div>
<script src="/select.js"></script>
</body>
</html>